{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    // cf https://www.typescriptlang.org/tsconfig#paths
    // and https://www.typescriptlang.org/docs/handbook/module-resolution.html#path-mapping
    "paths": {
      "lib/*": ["./lib/*"]
    },
  },
  "include": ["src"]
}
