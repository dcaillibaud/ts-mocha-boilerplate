{
  "name": "ts-mocha-boilerplate",
  "private": false,
  "license": "AGPL-3",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register -r tsconfig-paths/register 'test/**/*.*'"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.21",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "ts-mocha": "^10.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vite-tsconfig-paths": "^3.5.1"
  },
  "mocha": {
    "recursive": true,
    "reporter": "spec",
    "extensions": [
      "ts"
    ]
  },
  "ts-mocha": {
    "require": "ts-node/register"
    },
  "dependencies": {
    "imports": "^1.0.0"
  },
  "baseUrl": "./src/",
  "imports": {
    "#lib/*": "./src/lib/*"
  }
}
